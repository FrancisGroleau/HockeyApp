<% @allmessage.each{ |n| %>
    <div class="news">
      <h2><%= n.title %></h2>
      <p class="newsMeta">
        <%= "#{n.created_at.strftime('%a, %d %b %Y %H:%M:%S')} by " %>
        <span class="newsAuthor">
          <% if n.author != nil %>
              <a href="javascript:void(0)"><%= "#{n.author.first_name} #{n.author.last_name}" %></a>
          <% else %>
              <label>Anonymous</label>
          <% end %>
        </span>
      </p>
      <% if n.image != nil %>
          <div class="newsImage col-md-4 col-xs-12">
            <%= image_tag(n.image) %>
          </div>
      <% end %>
      <div class="newsText <%= n.image == nil ? "col-md-12 col-xs-12" : "col-md-8 col-xs-12" %>">
          <h3><%= n.description %></h3>
          <div  class="newsContent">
            <p class="initialText">
              <%= n.content.length > 800 ? "#{n.content[0, 800]} ..." : n.content %>
            </p>
            <% if n.content.length > 800 %>
                <a class="newsReadMore" href="javascript:void(0)" data-textlength="small">Read more</a>
                <input type="hidden" class="hiddenText" value="<%= n.content[800, n.content.length - 1]%>" />
            <% end %>
          </div>


      </div>
</div>
<% } %>

<% javascript_include_tag 'home.js' %>
